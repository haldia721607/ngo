@{
    ViewBag.Title = "Add Event";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<div id="page-wrapper" class="gray-bg dashbard-1">
    <div class="content-main">
        <!--banner-->
        <div class="banner">
            <h2>
                <a href="/admin/dashboard">Home</a>
                <i class="fa fa-angle-right"></i>
                <span>Add Event</span>
            </h2>
        </div>
        <!--//banner-->
        <!--content-->
        <div id="modelForm">
            <div class="blank">
                <div class="blank-page">
                    <div class="col-lg-12"><p id="msg" style="color:forestgreen;text-align:left;font-size:20px">@ViewBag.Msg</p></div>
                    <div class="col-lg-12"><p id="msg" style="color:red;text-align:left;font-size:20px">@ViewBag.Error</p></div>
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 form-group pull-right">
                        @using (Html.BeginForm("AddEvent", "admin", FormMethod.Post, new { enctype = "multipart/form-data", @id = "idAddEvent" }))
                        {
                            <input id="EventId" name="EventId" value="0" type="hidden" />
                            <div class="styled-input">
                                <div class="col-md-12 form-group">
                                    <lable> Short Description :<span class="mandatory">*</span></lable>
                                    <input type="text" id="ShortDescription" name="ShortDescription" value="" class="form-control" required />
                                </div>
                                <div class="clearfix"></div>
                                <div class="col-md-4 form-group">
                                    <div class="bootstrap-iso">
                                        <label>Date :<span class="mandatory">*</span></label>
                                        <input type="text" id="EventDate" name="EventDate" value="" class="form-control clsDate" required />
                                    </div>
                                </div>
                                <div class="clearfix"></div>

                                <div class="col-md-4 form-group">
                                    <div class="bootstrap-iso">
                                        <label>Upload Image:</label>
                                        <input type="file" id="httpPostedFileBases" name="httpPostedFileBases" value="" multiple class="form-control" accept=".png, .jpg, .jpeg" required />
                                    </div>
                                </div>
                                <div class="clearfix"></div>
                                @for (int i = 1; i <= 4; i++)
                                {
                                    <div class="col-md-12 form-group">
                                        <div class="bootstrap-iso">
                                            <label>Video Url-@i :<span class="mandatory">*</span></label>
                                            <input type="text" id="VideoUrl_@i" name="VideoUrl_@i" placeholder="Video-Url" value="" class="form-control" required />
                                        </div>
                                    </div>
                                    <div class="clearfix"></div>
                                }

                                <div class="col-md-12 form-group">
                                    <lable> Long Description:<span class="mandatory">*</span></lable>
                                    <textarea rows="7" placeholder="Enter Your Description" name="LongDescription" id="LongDescription" class="form-control" required></textarea>
                                </div>
                                <div class="col-md-12 form-group">
                                    <lable> Status:<span class="mandatory">*</span></lable>
                                    <select id="IsActive" name="IsActive" required>
                                        <option value="1">Active</option>
                                        <option value="0">In-Active</option>
                                    </select>
                                </div>
                                <div class="col-md-9 form-group">

                                </div>
                                <div class="col-md-2 form-group">
                                    <div class="appointment-btn text-lg-right">
                                        <a href="@Url.Action("Event", "Admin")"  style="margin-top: 23px;" class="btn btn-primary pull-right">Back To List</a>
                                    </div>
                                </div>
                                <div class="col-md-1 form-group">
                                    <div class="appointment-btn text-lg-right">
                                        <button type="submit" name="btnSubmit" id="btnSubmit" style="margin-top: 23px;" class="btn btn-primary pull-right">Submit</button>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                    <div class="clearfix"> </div>
                </div>
            </div>
            <!--//content-->
            <!---->
        </div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $("#httpPostedFileBases").change(function () {
            var len = $(this).get(0).files.length;
            if (len > 10) {
                alert("Only 10 Images can upload at a time.");
            }
        });
        $("body").on("click", "#btnSubmit", function () {
            var len = $("#httpPostedFileBases").get(0).files.length;
            if (len > 10) {
                alert("Only 10 Images can upload at a time.");
                return false;
            } else {
                return true;
            }
        });
    });
</script>