@using System.Data;
@model DataSet
@{
    ViewBag.Title = "Address Info";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
    DataRow dr = null;
    if (Model != null)
    {
        dr = Model.Tables[0].Rows[0];
    }
}

<div id="page-wrapper" class="gray-bg dashbard-1">
    <div class="content-main">
        <!--banner-->
        <div class="banner">
            <h2>
                <a href="/admin/dashboard">Home</a>
                <i class="fa fa-angle-right"></i>
                <span>Address Info</span>
            </h2>
        </div>
        <!--//banner-->
        <!--content-->
        <div id="modelForm">
            <div class="blank">
                <div class="blank-page">
                    <div class="col-lg-12"><p id="msg" style="color:#ef0f44;text-align:left;font-size:20px">@ViewBag.Error</p></div>
                    <div class="col-lg-12"><p id="msg" style="color:forestgreen;text-align:left;font-size:20px">@ViewBag.Msg</p></div>
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 form-group pull-right">
                        @using (Html.BeginForm("UpdateAddressInfo", "admin", FormMethod.Post, new { enctype = "multipart/form-data", @id = "updateAddressInfo" }))
                        {
                            <input id="UserId" name="UserId" value="@dr["UserId"].ToString()" type="hidden" />
                            <div class="styled-input">
                                <div class="col-md-12 form-group">
                                    <lable> Organization Name :</lable>
                                    <input type="text" id="OrganizationName" name="OrganizationName" class="form-control" placeholder="Enter Organization Name" value="@dr["OrganizationName"].ToString()" required="" />
                                </div>
                            </div>
                            <div class="styled-input">
                                <div class="col-md-12 form-group">
                                    <lable> A/C :</lable>
                                    <input type="text" id="AccountNumber" name="AccountNumber" class="form-control" placeholder="Enter Account Number" value="@dr["AccountNumber"].ToString()" required="" />
                                </div>
                            </div>
                            <div class="styled-input">
                                <div class="col-md-12 form-group">
                                    <lable> IFSC :</lable>
                                    <input type="text" id="IFSC" name="IFSC" class="form-control" placeholder="Enter IFSC" value="@dr["IFSC"].ToString()" required="" />
                                </div>
                            </div>
                            <div class="styled-input">
                                <div class="col-md-12 form-group">
                                    <lable> Address :</lable>
                                    <input type="text" id="Address" name="Address" class="form-control" placeholder="Enter Address" value="@dr["Address"].ToString()" required="" />
                                </div>
                            </div>
                            <div class="styled-input">
                                <div class="col-md-12 form-group">
                                    <lable> Address-2 :</lable>
                                    <input type="text" id="Address2" name="Address2" class="form-control" placeholder="Enter Address 2" value="@dr["Address2"].ToString()" required="" />
                                </div>
                            </div>
                            <div class="styled-input">
                                <div class="col-md-12 form-group">
                                    <lable> Address-3 :</lable>
                                    <input type="text" id="Address3" name="Address3" class="form-control" placeholder="Enter Address 3" value="@dr["Address3"].ToString()" required="" />
                                </div>
                            </div>
                            <div class="styled-input">
                                <div class="col-md-12 form-group">
                                    <lable> Mobile Number :</lable>
                                    <input type="text" id="MobileNumber" name="MobileNumber" class="form-control" placeholder="Enter Mobile Number" value="@dr["MobileNumber"].ToString()" required="" />
                                </div>
                            </div>
                            <div class="styled-input">
                                <div class="col-md-12 form-group">
                                    <lable> Email :</lable>
                                    <input type="text" id="Email" name="Email" class="form-control" placeholder="Enter Email" value="@dr["Email"].ToString()" required="" />
                                </div>
                            </div>

                            <div class="appointment-btn text-lg-right">
                                <button type="submit" name="btnSubmit" id="btnSubmit" style="margin-top: 23px;" class="btn btn-primary pull-right">Update</button>
                            </div>
                        }
                    </div>
                </div>
            </div>
            <div class="clearfix"> </div>
        </div>
    </div>
    <!--//content-->
    <!---->
</div>
