<div class="row contact-rooo no-margin">
    <div class="container">
        <div class="row">
            <div style="padding:20px" class="col-sm-7">
                <div class="col-lg-12"><p id="msg" style="color:forestgreen;text-align:left;font-size:20px">@ViewBag.Msg</p></div>
                @using (Html.BeginForm("ContactSave", "home", FormMethod.Post, new { enctype = "multipart/form-data", @id = "ContactSave" }))
                {
                    <h2>Contact Form</h2> <br>
                    <div class="row cont-row">
                        <div class="col-sm-3"><label>Enter Name </label><span>:</span></div>
                        <div class="col-sm-8"><input type="text" placeholder="Enter Name" id="name" name="name" required class="form-control input-sm"></div>
                    </div>
                    <div class="row cont-row">
                        <div class="col-sm-3"><label>Email Address </label><span>:</span></div>
                        <div class="col-sm-8"><input type="text" name="Address" id="Address" placeholder="Enter Email Address" required class="form-control input-sm"></div>
                    </div>
                    <div class="row cont-row">
                        <div class="col-sm-3"><label>Mobile Number</label><span>:</span></div>
                        <div class="col-sm-8"><input type="text" name="mobilenumber" id="mobilenumber" placeholder="Enter Mobile Number" required class="form-control input-sm"></div>
                    </div>
                    <div class="row cont-row">
                        <div class="col-sm-3"><label>Enter Message</label><span>:</span></div>
                        <div class="col-sm-8">
                            <textarea rows="5" placeholder="Enter Your Message" name="message" id="message" class="form-control  input-sm" required></textarea>
                        </div>
                    </div>
                    <div style="margin-top:10px;" class="row">
                        <div style="padding-top:10px;" class="col-sm-3"><label></label></div>
                        <div class="col-sm-8">
                            <button type="sub" id="btnSendMessage" class="btn btn-primary btn-sm">Send Message</button>
                        </div>
                    </div>
                }
            </div>
            <div class="col-sm-5">
                @if (Model != null && Model.Tables[0].Rows.Count > 0)
                {
                    dr = Model.Tables[0].Rows[0];
                    <div class="col-sm-12">
                        <div style="margin: 30px;" class="serv">
                            <h2 style="margin-top:10px;">Donate Us</h2>
                            Organization Name : @dr["OrganizationName"].ToString()<br>
                            A/C               : @dr["AccountNumber"].ToString()<br>
                            IFSC              : @dr["IFSC"].ToString()  <br>
                            Phone             : +91 @dr["MobileNumber"].ToString()<br>
                            Email : @dr["Email"].ToString()<br>
                        </div>
                    </div>
                    <div class="col-sm-12">
                        <div style="margin: 30px;" class="serv">
                            <h2 style="margin-top:10px;">Address</h2>
                            @dr["Address"].ToString() <br>
                            @dr["Address2"].ToString(), <br>
                            @dr["Address3"].ToString()<br>
                            Phone : +91 @dr["MobileNumber"].ToString()<br>
                            Email : @dr["Email"].ToString()<br>
                        </div>
                    </div>
                }
                else
                {
                    <div class="col-sm-12">
                        <div style="margin: 30px;" class="serv">
                            <h2 style="margin-top:10px;">Donate Us</h2>
                            Organization Name : ADAM Education Foundation<br>
                            A/C               : 333555452345<br>
                            IFSC              : SBINDSS  <br>
                            Phone             : +91 9159669599<br>
                            Email : adameducationfoundation@gmail.com<br>
                        </div>
                    </div>
                    <div class="col-sm-12">
                        <div style="margin: 30px;" class="serv">
                            <h2 style="margin-top:10px;">Address</h2>
                            ADAM Education Foundation, <br>
                            23/H-2, Building<br>
                            TA, AUS District<br>
                            Phone : +91 9159669599<br>
                            Email : adameducationfoundation@gmail.com<br>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>



